    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger",
            "type": "debugpy",
            "request": "launch",
            "python": "/home/zhangjh/code/python/rag/venv/bin/python",
            "program": "${workspaceFolder}/backend/app/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
                
            }
        },
        {
            "name": "Python Opentelemetry",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/venv/bin/python",
            "module": "opentelemetry-instrument",
            "args": [
                "--service_name",
                "light-llm-agent",
                "--traces_exporter",
                "otlp,console",
                "--logs_exporter",
                "otlp,console",
                "--metrics_exporter",
                "none",
                "--exporter_otlp_protocol",
                "http/protobuf",
                "--exporter_otlp_endpoint",
                "http://192.168.2.42:8086/otel/api/public/otel",
                "--exporter_otlp_headers",
                "X-Api-Key=pk-lh-55a2e5bc-af3c-41d0-b38a-139eef9deae3",
                "python",
                "${workspaceFolder}/src/light_llm_agent/main.py"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
                "CONFIG_PATH": "${workspaceFolder}/src/light_llm_agent/conf/config.yaml"
            }
        },
        {
            "name": "Python: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/venv/bin/python",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--port",
                "8800"
            ],
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "jinja": true,
            "justMyCode": true
        },
       
    ]
}